<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/selectedChildPortrait"
        android:layout_width="105dp"
        android:layout_height="97dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/child_image_listview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/selectedChildName"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:text="Child's Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/selectedChildPortrait"
        app:layout_constraintStart_toEndOf="@+id/selectedChildPortrait"
        app:layout_constraintTop_toTopOf="@+id/selectedChildPortrait"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>